Testing threads 2
==CODE==
import std.io.*;

var acc1 = 0;
var acc2 = 0;
var id = 0;

process t[2] {
	var a = 0;

	critical {
		a = id;
		++id;
	}

	var i = 0;
	var n = 0;

	if (a == 0) {
		i = 0;
		n = 1000;
	}

	if (a == 1) {
		i = 1001;
		n = 2000;
	}

	var acc = 0;

	while (i <= n) {
		acc = acc + i;
		++i;
	}

	if (a == 0) {
		acc1 = acc;
	}

	if (a == 1) {
		acc2 = acc;
	}

}

t.run();
t.wait();

printf ("\1\n", acc1 + acc2);
