Testing variable value when using recursivity
==CODE==
import std.io;

Int a(Int k)
{
	print("funcarg: ", k, "\n");
    if (k == 0) {
        return 1;
    }

    Int x = a(0);
    if (k == 3) {
        print("x=",x, "\n");
    }
    a(k - 1);
    if (k == 3) {
        print("x=",x, "\n");
    }

    return k;
}

println(a(3));
